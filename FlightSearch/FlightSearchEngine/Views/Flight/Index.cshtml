@model SearchViewModel

<div class="container mt-4">

    <div class="card shadow p-4">
        <h3 class="mb-4 text-center">Flight Search</h3>

        <form asp-controller="Flight" method="post" class="row g-3 align-items-end">
            @Html.AntiForgeryToken()

            <div class="col-md-3">
                <label class="form-label">Source</label>
                <select asp-for="Source" asp-items="Model.SourceList" class="form-select"></select>
            </div>

            <div class="col-md-3">
                <label class="form-label">Destination</label>
                <select asp-for="Destination" asp-items="Model.DestinationList" class="form-select"></select>
            </div>

            <div class="col-md-2">
                <label class="form-label">Passengers</label>
                <input asp-for="NumberOfPersons" type="number" class="form-control" min="1" />
            </div>

            <div class="col-md-2">
                <button type="submit"
                        asp-action="SearchFlights"
                        class="btn btn-success w-100">
                    Flights Only
                </button>
            </div>

            <div class="col-md-2">
                <button type="submit"
                        asp-action="SearchFlightsWithHotels"
                        class="btn btn-warning w-100">
                    Flight + Hotel
                </button>
            </div>

        </form>
    </div>
</div>