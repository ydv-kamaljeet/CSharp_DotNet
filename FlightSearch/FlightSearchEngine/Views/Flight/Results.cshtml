@model object

<div class="container mt-4">

    <div class="card shadow p-4">
        <h3 class="mb-4 text-center">Search Results</h3>

        @if (Model is IEnumerable<FlightResult> flights)
        {
            if (!flights.Any())
            {
                <div class="alert alert-danger text-center">
                    No Flights Found
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Flight ID</th>
                                <th>Flight Name</th>
                                <th>Type</th>
                                <th>Source</th>
                                <th>Destination</th>
                                <th>Total Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in flights)
                            {
                                <tr>
                                    <td>@item.FlightId</td>
                                    <td>@item.FlightName</td>
                                    <td>@item.FlightType</td>
                                    <td>@item.Source</td>
                                    <td>@item.Destination</td>
                                    <td>₹ @item.TotalCost.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        }
        else if (Model is IEnumerable<FlightHotelResult> packages)
        {
            if (!packages.Any())
            {
                <div class="alert alert-danger text-center">
                    No Flight + Hotel Packages Found
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>Flight ID</th>
                                <th>Flight Name</th>
                                <th>Source</th>
                                <th>Destination</th>
                                <th>Hotel</th>
                                <th>Total Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in packages)
                            {
                                <tr>
                                    <td>@item.FlightId</td>
                                    <td>@item.FlightName</td>
                                    <td>@item.Source</td>
                                    <td>@item.Destination</td>
                                    <td>@item.HotelName</td>
                                    <td>₹ @item.TotalCost.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        }

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">
                Back to Search
            </a>
        </div>

    </div>
</div>